<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Action classes -->
        <parameter key="elao_admin.action.html.list.class">Elao\Bundle\AdminBundle\Action\HTML\ListAction</parameter>
        <parameter key="elao_admin.action.html.read.class">Elao\Bundle\AdminBundle\Action\HTML\ReadAction</parameter>
        <parameter key="elao_admin.action.html.form.class">Elao\Bundle\AdminBundle\Action\HTML\FormAction</parameter>
        <parameter key="elao_admin.action.html.create.class">Elao\Bundle\AdminBundle\Action\HTML\CreateAction</parameter>
        <parameter key="elao_admin.action.html.update.class">Elao\Bundle\AdminBundle\Action\HTML\UpdateAction</parameter>
        <parameter key="elao_admin.action.html.delete.class">Elao\Bundle\AdminBundle\Action\HTML\DeleteAction</parameter>

        <!-- Action configuration classes -->
        <parameter key="elao_admin.action_configuration.list.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\HTML\ListActionConfiguration</parameter>
        <parameter key="elao_admin.action_configuration.read.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\HTML\ReadActionConfiguration</parameter>
        <parameter key="elao_admin.action_configuration.create.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\HTML\CreateActionConfiguration</parameter>
        <parameter key="elao_admin.action_configuration.update.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\HTML\UpdateActionConfiguration</parameter>
        <parameter key="elao_admin.action_configuration.delete.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\HTML\DeleteActionConfiguration</parameter>
    </parameters>

    <services>
        <!-- List action -->
        <service id="elao_admin.action.html.list" class="%elao_admin.action.html.list.class%" parent="elao_admin.action" abstract="true">
            <tag name="elao_admin.action" alias="list" configuration="%elao_admin.action_configuration.list.class%" />
            <argument type="service" id="templating" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="knp_paginator" />
        </service>

        <!-- Read action -->
        <service id="elao_admin.action.html.read" class="%elao_admin.action.html.read.class%" parent="elao_admin.action" abstract="true">
            <tag name="elao_admin.action" alias="read" configuration="%elao_admin.action_configuration.read.class%"/>
            <argument type="service" id="templating" />
        </service>

        <!-- Form Abstract Action -->
        <service id="elao_admin.action.html.form" parent="elao_admin.action" abstract="true">
            <argument type="service" id="templating" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="elao_admin.notifier" />
        </service>

        <!-- Form actions -->
        <service id="elao_admin.action.html.create" class="%elao_admin.action.html.create.class%" parent="elao_admin.action.html.form" abstract="true">
            <tag name="elao_admin.action" alias="create" configuration="%elao_admin.action_configuration.create.class%"/>
        </service>

        <service id="elao_admin.action.html.update" class="%elao_admin.action.html.update.class%" parent="elao_admin.action.html.form" abstract="true">
            <tag name="elao_admin.action" alias="update" configuration="%elao_admin.action_configuration.update.class%"/>
        </service>

        <service id="elao_admin.action.html.delete" class="%elao_admin.action.html.delete.class%" parent="elao_admin.action.html.form" abstract="true">
            <tag name="elao_admin.action" alias="delete" configuration="%elao_admin.action_configuration.delete.class%"/>
        </service>
    </services>
</container>
