<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Action classes -->
        <parameter key="elao_admin.action.rest.class">Elao\Bundle\AdminBundle\Action\REST\Action</parameter>
        <parameter key="elao_admin.action.rest.list.class">Elao\Bundle\AdminBundle\Action\REST\ListAction</parameter>
        <parameter key="elao_admin.action.rest.read.class">Elao\Bundle\AdminBundle\Action\REST\ReadAction</parameter>
        <parameter key="elao_admin.action.rest.create.class">Elao\Bundle\AdminBundle\Action\REST\CreateAction</parameter>

        <!-- Action configuration classes -->
        <parameter key="elao_admin.action_configuration.list.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\REST\ListActionConfiguration</parameter>
        <parameter key="elao_admin.action_configuration.read.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\REST\ReadActionConfiguration</parameter>
        <parameter key="elao_admin.action_configuration.create.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\REST\CreateActionConfiguration</parameter>
    </parameters>

    <services>
        <!-- REST action -->
        <service id="elao_admin.action.rest" class="%elao_admin.action.rest.class%" parent="elao_admin.action" abstract="true">
            <call method="setSerializer">
                <argument type="service" id="jms_serializer" />
            </call>
        </service>

        <!-- List action -->
        <service id="elao_admin.action.rest.list" class="%elao_admin.action.rest.list.class%" parent="elao_admin.action.rest" abstract="true">
            <tag name="elao_admin.action" alias="list" configuration="%elao_admin.action_configuration.list.class%"/>
            <argument type="service" id="form.factory" />
            <argument type="service" id="knp_paginator" />
        </service>

        <!-- Read action -->
        <service id="elao_admin.action.rest.read" class="%elao_admin.action.rest.read.class%" parent="elao_admin.action.rest" abstract="true">
            <tag name="elao_admin.action" alias="read" configuration="%elao_admin.action_configuration.read.class%"/>
        </service>

        <!-- Create action -->
        <service id="elao_admin.action.rest.create" class="%elao_admin.action.rest.create.class%" parent="elao_admin.action.rest" abstract="true">
            <tag name="elao_admin.action" alias="create" configuration="%elao_admin.action_configuration.create.class%"/>
            <argument type="service" id="form.factory" />
        </service>
    </services>
</container>
