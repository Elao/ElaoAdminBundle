<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="elao_micro_admin.action.index.class">Elao\Bundle\MicroAdminBundle\Action\IndexAction</parameter>
        <parameter key="elao_micro_admin.action.read.class">Elao\Bundle\MicroAdminBundle\Action\ReadAction</parameter>
        <parameter key="elao_micro_admin.action.create.class">Elao\Bundle\MicroAdminBundle\Action\CreateAction</parameter>
        <parameter key="elao_micro_admin.action.update.class">Elao\Bundle\MicroAdminBundle\Action\UpdateAction</parameter>
        <parameter key="elao_micro_admin.action.delete.class">Elao\Bundle\MicroAdminBundle\Action\DeleteAction</parameter>
    </parameters>

    <services>
        <!-- Abstract Actions -->
        <service id="elao_micro_admin.action" abstract="true">
            <call method="setTemplating">
                <argument type="service" id="templating" />
            </call>
        </service>

        <service
            id="elao_micro_admin.action.index"
            class="%elao_micro_admin.action.index.class%"
            parent="elao_micro_admin.action"
            abstract="true"
        >
            <tag name="elao_micro_admin.action" alias="index" />
        </service>

        <service
            id="elao_micro_admin.action.read"
            class="%elao_micro_admin.action.read.class%"
            parent="elao_micro_admin.action"
            abstract="true"
        >
            <tag name="elao_micro_admin.action" alias="read" />
        </service>

        <service
            id="elao_micro_admin.action.create"
            class="%elao_micro_admin.action.create.class%"
            parent="elao_micro_admin.action"
            abstract="true"
        >
            <tag name="elao_micro_admin.action" alias="create" />
        </service>

        <service
            id="elao_micro_admin.action.update"
            class="%elao_micro_admin.action.update.class%"
            parent="elao_micro_admin.action"
            abstract="true"
        >
            <tag name="elao_micro_admin.action" alias="update" />
        </service>

        <service
            id="elao_micro_admin.action.delete"
            class="%elao_micro_admin.action.delete.class%"
            parent="elao_micro_admin.action"
            abstract="true"
        >
            <tag name="elao_micro_admin.action" alias="delete" />
        </service>
    </services>
</container>
