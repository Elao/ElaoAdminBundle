<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Action classes -->
        <parameter key="elao_admin.action.index.class">Elao\Bundle\AdminBundle\Action\IndexAction</parameter>
        <parameter key="elao_admin.action.read.class">Elao\Bundle\AdminBundle\Action\ReadAction</parameter>
        <parameter key="elao_admin.action.create.class">Elao\Bundle\AdminBundle\Action\CreateAction</parameter>
        <parameter key="elao_admin.action.update.class">Elao\Bundle\AdminBundle\Action\UpdateAction</parameter>
        <parameter key="elao_admin.action.delete.class">Elao\Bundle\AdminBundle\Action\DeleteAction</parameter>

        <!-- Action configuration classes -->
        <parameter key="elao_admin.action_configuration.index.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\IndexActionConfiguration</parameter>
        <parameter key="elao_admin.action_configuration.read.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\ReadActionConfiguration</parameter>
        <parameter key="elao_admin.action_configuration.create.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\CreateActionConfiguration</parameter>
        <parameter key="elao_admin.action_configuration.update.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\UpdateActionConfiguration</parameter>
        <parameter key="elao_admin.action_configuration.delete.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\DeleteActionConfiguration</parameter>
    </parameters>

    <services>
        <!-- Abstract Actions -->
        <service id="elao_admin.action" abstract="true"></service>

        <service id="elao_admin.action.index" class="%elao_admin.action.index.class%" parent="elao_admin.action" abstract="true">
            <tag name="elao_admin.action" alias="index" configuration="%elao_admin.action_configuration.index.class%" />
            <argument type="service" id="templating" />
        </service>

        <service id="elao_admin.action.read" class="%elao_admin.action.read.class%" parent="elao_admin.action" abstract="true">
            <tag name="elao_admin.action" alias="read" configuration="%elao_admin.action_configuration.read.class%"/>
            <argument type="service" id="templating" />
        </service>

        <service id="elao_admin.action.create" class="%elao_admin.action.create.class%" parent="elao_admin.action" abstract="true">
            <tag name="elao_admin.action" alias="create" configuration="%elao_admin.action_configuration.create.class%"/>
            <argument type="service" id="templating" />
            <argument type="service" id="form.factory" />
        </service>

        <service id="elao_admin.action.update" class="%elao_admin.action.update.class%" parent="elao_admin.action" abstract="true">
            <tag name="elao_admin.action" alias="update" configuration="%elao_admin.action_configuration.update.class%"/>
            <argument type="service" id="templating" />
            <argument type="service" id="form.factory" />
        </service>

        <service id="elao_admin.action.delete" class="%elao_admin.action.delete.class%" parent="elao_admin.action" abstract="true">
            <tag name="elao_admin.action" alias="delete" configuration="%elao_admin.action_configuration.delete.class%"/>
            <argument type="service" id="form.factory" />
        </service>
    </services>
</container>
