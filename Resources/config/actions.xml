<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Action classes -->
        <parameter key="elao_admin.action.index.class">Elao\Bundle\AdminBundle\Action\IndexAction</parameter>
        <parameter key="elao_admin.action.read.class">Elao\Bundle\AdminBundle\Action\ReadAction</parameter>
        <parameter key="elao_admin.action.create.class">Elao\Bundle\AdminBundle\Action\CreateAction</parameter>
        <parameter key="elao_admin.action.update.class">Elao\Bundle\AdminBundle\Action\UpdateAction</parameter>
        <parameter key="elao_admin.action.delete.class">Elao\Bundle\AdminBundle\Action\DeleteAction</parameter>

        <!-- Action configuration classes -->
        <parameter key="elao_admin.action_configuration.index.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\IndexAction</parameter>
        <parameter key="elao_admin.action_configuration.read.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\ReadAction</parameter>
        <parameter key="elao_admin.action_configuration.create.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\CreateAction</parameter>
        <parameter key="elao_admin.action_configuration.update.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\UpdateAction</parameter>
        <parameter key="elao_admin.action_configuration.delete.class">Elao\Bundle\AdminBundle\DependencyInjection\ActionConfiguration\DeleteAction</parameter>
    </parameters>

    <services>
        <!-- Abstract Actions -->
        <service id="elao_admin.action" abstract="true">
            <call method="setTemplating">
                <argument type="service" id="templating" />
            </call>
        </service>

        <service id="elao_admin.action.index" class="%elao_admin.action.index.class%" parent="elao_admin.action" abstract="true">
            <tag name="elao_admin.action" alias="index" configuration="%elao_admin.action_configuration.index.class%" />
        </service>

        <service
            id="elao_admin.action.read"
            class="%elao_admin.action.read.class%"
            parent="elao_admin.action"
            abstract="true"
        >
            <tag
                name="elao_admin.action"
                alias="read"
                configuration="%elao_admin.action_configuration.read.class%"
            />
        </service>

        <service
            id="elao_admin.action.create"
            class="%elao_admin.action.create.class%"
            parent="elao_admin.action"
            abstract="true"
        >
            <tag
                name="elao_admin.action"
                alias="create"
                configuration="%elao_admin.action_configuration.create.class%"
            />
        </service>

        <service
            id="elao_admin.action.update"
            class="%elao_admin.action.update.class%"
            parent="elao_admin.action"
            abstract="true"
        >
            <tag
                name="elao_admin.action"
                alias="update"
                configuration="%elao_admin.action_configuration.update.class%"
            />
        </service>

        <service
            id="elao_admin.action.delete"
            class="%elao_admin.action.delete.class%"
            parent="elao_admin.action"
            abstract="true"
        >
            <tag
                name="elao_admin.action"
                alias="delete"
                configuration="%elao_admin.action_configuration.delete.class%"
            />
        </service>
    </services>
</container>
